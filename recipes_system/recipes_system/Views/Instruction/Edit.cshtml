@model recipes_system.Models.InstructionDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit instruction</h2>
<form action="/instruction/Update/@Model.InstructionId" method="POST">
    <div style="display:none;">
        @* Pass through the animal ID *@
        <input type="text" name="InstructionId" value="@Model.InstructionId" />
        </div>
        <div class="form-group m-3">
            <label>Decsription:</label> <input value="@Model.Description" type="text" name="Description" />
        </div>
       

        <div class="form-group m-3">
            <input type="submit" value="Update insturction" class="btn btn-primary" />
        </div>
</form>


